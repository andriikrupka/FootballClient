                <VisualState x:Name="Mobile">
                    <VisualState.StateTriggers>
                        <windowsStateTriggers:DeviceFamilyStateTrigger DeviceFamily="Mobile"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationBar.Margin" Value="0,24,-20,0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <windowsStateTriggers:DeviceFamilyStateTrigger DeviceFamily="Desktop"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationBar.Margin" Value="0,0,-20,0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <SplitView x:Name="rootSplitView"
                   CompactPaneLength="50"
                   DisplayMode="CompactOverlay"
                   Style="{StaticResource AppShelsSplitViewStyle}"
                   OpenPaneLength="212">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <ToggleButton x:Name="HamburgerButton"
                                  VerticalAlignment="Top"
                                  IsChecked="{x:Bind rootSplitView.IsPaneOpen, Mode=TwoWay, Converter={StaticResource NullableBooleanConverter}}"
                                  FontFamily="Segoe MDL2 Assets"
                                  Content="&#xE700;"
                                  Width="50"
                                  Height="50"
                                  Background="Transparent"/>

                    <ListView Grid.Row="1"
                              x:Name="itemsListView"
                              ItemsSource="{Binding NavigationItems}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                              ItemContainerStyle="{StaticResource MenuListViewItemExpanded}"/>
                </Grid>
            </SplitView.Pane>
        </SplitView>

        <Grid x:Name="NavigationBar"
              VerticalAlignment="Top">
            <Border BorderBrush="LightGray"
                    BorderThickness="0,0,0,1"/>
            <uwpUIToolkit:AdaptiveGridView DesiredWidth="50"
                                           ItemHeight="50"
                                           Height="50"
                                           VerticalAlignment="Top"
                                           ItemsSource="{Binding NavigationItems}"
                                           ScrollViewer.VerticalScrollMode="Disabled"
                                           SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                           ItemContainerStyle="{StaticResource NavigationBarGridViewItem}"
                                           Visibility="{Binding SelectedItem, Converter={StaticResource EmptyToVisibilityConverter}}">
                <uwpUIToolkit:AdaptiveGridView.RenderTransform>
                    <TranslateTransform Y="-52"
                                        x:Name="NavigationBarTranslateTransform"/>
                </uwpUIToolkit:AdaptiveGridView.RenderTransform>
            </uwpUIToolkit:AdaptiveGridView>
            
        </Grid>

    </Grid>
</UserControl>
